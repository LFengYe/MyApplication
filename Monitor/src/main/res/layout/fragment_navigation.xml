<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/transfer_icon_left"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_margin="@dimen/space_15"

            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/line_gps"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/line_deep_blue"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@mipmap/line_dian"
                android:layout_height="wrap_content" />

        </LinearLayout>




        <ImageView
            android:id="@+id/changePosition"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:padding="@dimen/space_20"
            android:src="@mipmap/line_transform"
            android:layout_height="wrap_content" />



        <LinearLayout

            android:layout_toRightOf="@+id/transfer_icon_left"
            android:layout_toLeftOf="@+id/changePosition"
            android:layout_marginRight="@dimen/space_10"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:background="@null"
                android:layout_marginTop="@dimen/space_10"
                android:gravity="center|left"
                android:id="@+id/tv_start_position"
                android:padding="@dimen/space_10"
                android:singleLine="true"
                android:textSize="@dimen/text_size_13"
                android:layout_gravity="center"
                android:hint="@string/transform_start_hit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginTop="@dimen/space_5"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="1dp"/>

            <TextView
                android:background="@null"
                android:gravity="center|left"
                android:textSize="@dimen/text_size_13"
                android:layout_marginBottom="@dimen/space_10"
                android:id="@+id/tv_end_position"
                android:padding="@dimen/space_10"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:hint="@string/transform_end_hit"
                android:layout_height="wrap_content" />



        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/navigaBtn"
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:text="@string/dialog_ok"
        android:padding="@dimen/space_10"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"

        android:background="@drawable/login_in_but"
        android:layout_height="wrap_content" />
</LinearLayout>